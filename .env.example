# Reown AppKit Project ID (Required for WalletConnect functionality)
# Get your free Project ID from: https://dashboard.reown.com
# This enables wallet connections and qualifies you for WalletConnect weekly rewards on Base
# Without this, the app will use fallback wagmi configuration (limited functionality)
NEXT_PUBLIC_PROJECT_ID=your_project_id_here

# Database connection string
DATABASE_URL=postgresql://username:password@host:port/database

# Faucet contract address on Base mainnet (Public - used by frontend)
NEXT_PUBLIC_FAUCET_CONTRACT_ADDRESS=0x34bB7cb2c9b5fF03D824F0C80067E3eeB6C4401d

# Faucet contract address (Server-side - used by backend signature generation)
FAUCET_CONTRACT_ADDRESS=0x34bB7cb2c9b5fF03D824F0C80067E3eeB6C4401d

# Faucet owner private key (KEEP THIS SECRET! Never commit to git!)
# This is used to sign claim requests on the backend
# Generate: Use the private key of the address that deployed the contract
FAUCET_OWNER_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Port for the server (optional, defaults to 3001)
PORT=3001

# Node environment
NODE_ENV=development

# Miniapp Strict Mode
# When set to 'true', claims are ONLY allowed from within the Farcaster miniapp environment
# When set to 'false' or undefined, development mode bypass is allowed (localhost, vercel preview, etc.)
# Set this to 'true' in production to restrict claims to Farcaster users only
NEXT_PUBLIC_MINIAPP_STRICT_MODE=false

# Farcaster Follow Requirement
# When set to 'true' (default), users must follow the target Farcaster user to claim
# When set to 'false', follow check is disabled
NEXT_PUBLIC_FOLLOW_REQUIRED=true

# Farcaster Neynar Score Requirement
# When set to 'true' (default), users must have a minimum Neynar score of 0.5 to claim
# When set to 'false', score check is disabled
# Neynar score ranges from 0 to 1, where higher scores indicate more reputable accounts
# This helps prevent spam and ensures fair distribution to legitimate users
NEXT_PUBLIC_SPAM_LABEL_REQUIRED=true

# Neynar API Key (Required for follow verification)
# Get your free API key from: https://neynar.com
# Used to verify if users follow the target Farcaster profile
# If not set, follow checks will be bypassed in development
NEYNAR_API_KEY=your_neynar_api_key_here

# ===========================================
# MON FAUCET CONFIGURATION (MONAD TESTNET)
# ===========================================

# Enable/Disable MON Faucet
# When set to 'true', the MON faucet card will be displayed on the UI
# When set to 'false' or undefined, MON faucet will be hidden
NEXT_PUBLIC_MON_FAUCET_ENABLED=false

# MON Faucet Contract Address (Public - used by frontend)
# The deployed MON faucet contract address on Monad Testnet
# Deploy the contract from your Solidity code and paste the address here
NEXT_PUBLIC_MON_FAUCET_CONTRACT_ADDRESS=your_mon_contract_address_here

# MON Faucet Contract Address (Server-side - used by backend signature generation)
# Should match NEXT_PUBLIC_MON_FAUCET_CONTRACT_ADDRESS
MON_FAUCET_CONTRACT_ADDRESS=your_mon_contract_address_here

# MON Faucet Owner Private Key (KEEP THIS SECRET! Never commit to git!)
# This is used to sign MON claim requests on the backend
# Can use the same private key as the ETH faucet or a different one
# Generate: Use the private key of the address that deployed the MON contract
MON_FAUCET_OWNER_PRIVATE_KEY=your_mon_private_key_here_without_0x_prefix